<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tyler.androidscripturereference.MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bookText"
        android:layout_marginTop="42dp"
        android:enabled="true"
        android:minWidth="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/submitButton"
        android:layout_alignStart="@+id/submitButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chapterText"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/bookText"
        android:layout_alignLeft="@+id/bookText"
        android:layout_alignStart="@+id/bookText"
        android:minWidth="50dp"
        android:layout_alignRight="@+id/bookText"
        android:layout_alignEnd="@+id/bookText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/verseText"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/chapterText"
        android:layout_alignLeft="@+id/chapterText"
        android:layout_alignStart="@+id/chapterText"
        android:minWidth="50dp"
        android:layout_alignRight="@+id/chapterText"
        android:layout_alignEnd="@+id/chapterText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonShareLabelString"
        android:id="@+id/submitButton"
        android:layout_below="@+id/verseText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="77dp"
        android:onClick="share" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/bookLabelString"
        android:id="@+id/bookLabel"
        android:layout_alignTop="@+id/bookText"
        android:layout_toLeftOf="@+id/bookText"
        android:layout_toStartOf="@+id/bookText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Chapter"
        android:id="@+id/chapterLabel"
        android:layout_alignTop="@+id/chapterText"
        android:layout_toLeftOf="@+id/chapterText"
        android:layout_toStartOf="@+id/chapterText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Verse"
        android:id="@+id/verseLabel"
        android:layout_alignTop="@+id/verseText"
        android:layout_toLeftOf="@+id/verseText"
        android:layout_toStartOf="@+id/verseText" />

</RelativeLayout>
